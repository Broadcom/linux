/dts-v1/;

#include "bcm958305_audio_sa.dtsi"

/ {
	model = "Cygnus Wireless Audio (BCM958305_AK4458)";
	compatible = "brcm,bcm58305", "brcm,cygnus";

	gpio_backlight: backlight {
		compatible = "gpio-backlight";
		gpios = <&stmpe_gpio 2 0>;
		default-on;
	};

	sound {
		compatible = "brcm,bcm958305-ak4458-machine";
		status = "okay";

		link0 {
			format = "dsp_a";
			bitclock-master = <&dailink0_master>;
			frame-master = <&dailink0_master>;

			dailink0_master: cpu {
				sound-dai = <&cygnus_audio 1>;
			};

			codec {
				sound-dai = <&ak4458_codec>;
			};
		};

		link1 {
			format = "i2s";
			bitclock-master = <&dailink1_master>;
			frame-master = <&dailink1_master>;

			dailink1_master: cpu {
				sound-dai = <&cygnus_audio 3>;
			};

			codec {
				sound-dai = <&spdif_dummy_tx>;
			};
		};

		link2 {
			format = "i2s";
			bitclock-master = <&dailink2_master>;
			frame-master = <&dailink2_master>;

			cpu {
				sound-dai = <&cygnus_audio 0>;
			};

			dailink2_master: codec {
				sound-dai = <&wm8804_spdif>;
			};
		};
	};

	/* dummy codec to model spdif tx */
	spdif_dummy_tx: spdif_tx {
		#sound-dai-cells = <0>;
		status = "okay";
		compatible = "linux,spdif-dit";
	};
};

&cygnus_audio {
	#sound-dai-cells = <1>;

	ssp0: ssp_port@0 {
		status = "okay";
	};

	ssp1: ssp_port@1 {
		status = "okay";
	};

	ssp2: ssp_port@2 {
		status = "okay";
	};

	spdif: spdif_port@3 {
		status = "okay";
	};
};

&dte {
	brcm,dte-interval-ns = <10000000>;
};

&ehci0 {
	phys = <&usbphy0 0 &usbphy2 2>;
	phy-names = "usbp0", "usbp2";
	status = "okay";
};

&enet {
	status = "okay";
};

&i2c0 {
	clock-frequency = <100000>;
	status = "okay";

	wm8804_spdif: wm8804@3a {
		#sound-dai-cells = <0>;
		compatible = "wlf,wm8804";
		reg = <0x3a>;
		PVDD-supply = <&vdd_3v3_reg>;
		DVDD-supply = <&vdd_3v3_reg>;
	};
};

&i2c1 {
	clock-frequency = <100000>;
	status = "okay";

	ak4458_codec: ak4458@10 {
		#sound-dai-cells = <0>;
		compatible = "asahi-kasei,ak4458";
		reg = <0x10>;
		amp-mute-gpio = <&gpio_asiu 43 0>;
	};
};

&keypad {
	keypad,num-rows = <3>;
	keypad,num-columns = <1>;
	status = "okay";

	linux,keymap = <MATRIX_KEY(0x00, 0x00, KEY_1) /* key_1 */
	MATRIX_KEY(0x01, 0x00, KEY_2) /* key_2 */
	MATRIX_KEY(0x02, 0x00, KEY_3) /* key_3 */
	>;
};

&ohci0 {
	phys = <&usbphy0 0 &usbphy2 2>;
	phy-names = "usbp0", "usbp2";
	status = "okay";
};

&pinctrl {
	pinctrl-names = "default";
	pinctrl-0 = <&keypad_on &i2s0_default_mux
		&i2s1_default_mux &i2s2_default_mux &dte_lts_0>;
	keypad_on: keypad_on {
		function = "key";
		groups = "key0_grp", "key8_grp",
			 "key9_grp", "key10_grp";
	};
};

&spi2 {
	status = "okay";
	num-cs = <2>;
	cs-gpios = <&gpio_asiu 46 0>, <&gpio_asiu 118 0>;

	pitft: pitft@0{
		compatible = "ilitek,ili9341";
		reg = <0x0>;
		spi-max-frequency = <25000000>;
		rotate = <270>;
		fps = <10>;
		bgr;
		buswidth = <8>;
		dc-gpios = <&gpio_asiu 117 0>;
		debug = <0>;
	};

	pitft_ts@1 {
		compatible = "st,stmpe610";
		reg = <0x1>;
		spi-max-frequency = <1000000>;
		irq-gpio = <&gpio_ccm 6 0>;
		interrupt-parent = <&gpio_ccm>;
		interrupt-controller;

		stmpe_touchscreen {
			compatible = "st,stmpe-ts";
			st,sample-time = <4>;
			st,mod-12b = <1>;
			st,ref-sel = <0>;
			st,adc-freq = <2>;
			st,ave-ctrl = <3>;
			st,touch-det-delay = <4>;
			st,settling = <2>;
			st,fraction-z = <7>;
			st,i-drive = <0>;
		};

		stmpe_gpio: stmpe_gpio {
			#gpio-cells = <2>;
			compatible = "st,stmpe-gpio";
			gpio-controller;
			/*
			 * only GPIO2 is wired/available
			 * and it is wired to the backlight
			 */
			st,norequest-mask = <0x7b>;
		};
	};
};
