/dts-v1/;

#include "valkyrie.dtsi"

/ {
	model = "Valkyrie (BCM958401M2) card";

	aliases {
		serial0 = &uart0;
	};

	chosen {
		bootargs = "root=/dev/ram rw console=ttyS0,57600n8 \
			   earlycon=uart8250,mmio32,0x48100000 maxcpus=1";

		stdout-path = "serial0:57600n8";
		linux,initrd-start = <0x4 0x04000000>;
		linux,initrd-end = <0x4 0x04c00000>;
	};
};

&uart0 {
	status = "okay";
};
