/dts-v1/;

#include "omega-base-board.dtsi"
#include "bcm58313.dtsi"
#include "dt-bindings/input/input.h"
#include "dt-bindings/gpio/gpio.h"

/ {
	model = "Broadcom Omega (bcm958313) Wireless Audio";

	vbus: regulator@0 {
		compatible = "regulator-fixed";
		regulator-name = "usb-vbus-p0";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		gpio = <&gpio_east 57 0>;
		status = "okay";
	};

	bluetooth {
		compatible = "brcm,bt-rfkill";
		brcm,rfkill-regulator = <&bt_reg0>;
		bt-dev-wake-gpio = <&gpio_east 20 0>;
		bt-host-wake-gpio = <&gpio_crmu 5 0>;
	};

	gpio_backlight: backlight {
		compatible = "gpio-backlight";
		gpios = <&stmpe_gpio 2 0>;
		default-on;
	};

	gpio_keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;

		play {
			label = "play or pause key";
			linux,code = <KEY_PLAYPAUSE>;
			gpios = <&gpio_crmu 1 0>;
			wakeup-source;
		};
	};

	sound {
		compatible = "brcm,omega-wa-machine";
		status = "okay";

		pinctrl-names = "default", "gpio";
		pinctrl-0 = <&i2c1_mfio045_pins>;
		pinctrl-1 = <&gpio_mfio045_pins>;

		/* gpio88 */
		brcm,reset-ak4458-gpio = <&gpio_east 37 GPIO_ACTIVE_LOW>;

		link0 {
			format = "dsp_a";
			bitclock-master = <&dailink0_master>;
			frame-master = <&dailink0_master>;

			cpu {
				sound-dai = <&omega_audio 2>;

				dai-tdm-slot-num = <8>;
				dai-tdm-slot-width = <32>;
				dai-tdm-slot-tx-mask = <1 1 1 1 0 0 0 0>;
				dai-tdm-slot-rx-mask = <1 1 1 1 0 0 0 0>;
			};

			dailink0_master: codec {
				sound-dai = <&omega_codec 0>;
			};
		};

		link1 {
			format = "dsp_b";
			bitclock-master = <&dailink1_master>;
			frame-master = <&dailink1_master>;

			dailink1_master: cpu {
				sound-dai = <&omega_audio 0>;

				dai-tdm-slot-num = <8>;
				dai-tdm-slot-width = <32>;
			};

			codec {
				sound-dai = <&ak4458>;

				dai-tdm-slot-num = <8>;
				dai-tdm-slot-width = <32>;
			};
		};

	};

	bt_reg0: regulator@1 {
		compatible = "regulator-fixed";
		regulator-name = "4356-bt-reg0";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		gpio = <&gpio_crmu 3 0>;
		enable-active-high;
		startup-delay-us = <1000>;
	};

	wlan_reg0: regulator@2 {
		compatible = "regulator-fixed";
		regulator-name = "wlan-rf-reg0";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		gpio = <&gpio_crmu 2 0>;
		enable-active-high;
		regulator-always-on;
		startup-delay-us = <1000>;
	};

	vdd_reg: regulator@3 {
		compatible = "regulator-fixed";
		regulator-name = "vdd-reg";
		gpio = <&gpio_crmu 0 0>;
		enable-active-high;
		regulator-always-on;
		regulator-boot-on;
		startup-delay-us = <1000>;
		status = "okay";
	};
};

&i2c0 {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_mfio043_pins>;
};

&i2c1 {
	status = "okay";

	ak4458: dac@10 {
		#sound-dai-cells = <0>;
		compatible = "asahi-kasei,ak4458";
		reg = <0x10>;
	};
};

&omega_codec {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&digmic0_pins &digmic1_pins>;
};

&omega_audio {
	#sound-dai-cells = <1>;

	pinctrl-names = "default";
	pinctrl-0 = <&i2s0_pins &i2s1_mfio089_pins>;

	assigned-clocks = <&audiopll_1 BCM_OMEGA_AUDIOPLL>,
			  <&ssp0_clock>,
			  <&ssp1_clock>,
			  <&ssp2_clock>,
			  <&spdiftx_clock>;
	assigned-clock-rates = <3612672000>;
	assigned-clock-parents = <0>,
				 <&audiopll_1 BCM_OMEGA_AUDIOPLL_CH1>,
				 <&audiopll_1 BCM_OMEGA_AUDIOPLL_CH2>,
				 <&audiopll_1 BCM_OMEGA_AUDIOPLL_CH3>,
				 <&audiopll_1 BCM_OMEGA_AUDIOPLL_CH4>;

	ssp0: ssp_port@0 {
		status = "okay";
	};

	ssp1: ssp_port@1 {
		status = "okay";
	};

	ssp2: ssp_port@2 {
		status = "okay";
	};
};

&usbphy {
	status = "okay";
	usbphy0: phy@0 {
		#phy-cells = <0>;
		reg = <0>;
		vbus-supply = <&vbus>;
	};
};

&ehci {
	phys = <&usbphy0>;
	phy-names = "usbp0";
	status = "okay";
};

&ohci {
	phys = <&usbphy0>;
	phy-names = "usbp0";
	status = "okay";
};

&uart0 {
	clock-frequency = <25000000>;
	status = "okay";
};

&uart3 {
	status = "okay";
};

&nand {
	nandcs@0 {
		compatible = "brcm,nandcs";
		reg = <0>;
		nand-ecc-mode = "hw";
		nand-ecc-strength = <8>;
		nand-ecc-step-size = <512>;
		nand-bus-width = <8>;
		brcm,nand-oob-sector-size = <16>;
		#address-cells = <1>;
		#size-cells = <1>;
	};
};

&mdio_mux {
	status = "okay";
};

&eth0 {
	status = "okay";
};

&switch {
	compatible = "brcm,bcm58313-srab", "brcm,omega-srab";
	status = "okay";
	ports {
		#address-cells = <1>;
		#size-cells = <0>;
		port@0 {
			reg = <0>;
			label = "lan";
			phy-handle = <&gphy0>;
			phy-mode = "gmii";
		};
	};
};

&esw_ctl {
	status = "okay";
};

&spi2 {
	status = "okay";
	num-cs = <2>;
	pinctrl-names = "default";
	pinctrl-0 = <&spi2_pins>;
	cs-gpios = <&gpio_west 31 0>, <&gpio_east 60 0>;

	pitft: pitft@0{
		compatible = "ilitek,ili9341";
		reg = <0>;
		spi-max-frequency = <25000000>;
		pl022,com-mode = <0>;
		rotate = <270>;
		fps = <10>;
		bgr;
		buswidth = <8>;
		dc-gpios = <&gpio_east 56 0>;
		debug = <0>;
	};

	pitft_ts@1 {
		compatible = "st,stmpe610";
		reg = <1>;
		spi-max-frequency = <1000000>;
		irq-gpio = <&gpio_east 55 0>;

		stmpe_touchscreen {
			compatible = "st,stmpe-ts";
			st,sample-time = <4>;
			st,mod-12b = <1>;
			st,ref-sel = <0>;
			st,adc-freq = <2>;
			st,ave-ctrl = <3>;
			st,touch-det-delay = <4>;
			st,settling = <2>;
			st,fraction-z = <7>;
			st,i-drive = <0>;
		};

		stmpe_gpio: stmpe_gpio {
			#gpio-cells = <2>;
			compatible = "st,stmpe-gpio";
			/*
			 * only GPIO2 is wired/available
			 * and it is wired to the backlight
			 */
			st,norequest-mask = <0x7b>;
		};
	};
};

&sdhci0 {
	status = "okay";

	no-1-8-v;

	pinctrl-names = "default";
	pinctrl-0 = <&sdio0_4bit_mode_pins>;
};

&pinmux0 {
	gpio_mfio045_pins: gpio_mfio045_mux_func {
		pinctrl-single,pins = <
			0xb4 ALT_0 /* MFIO_045: GPIO */
			0xb8 ALT_0 /* MFIO_046: GPIO */
		>;
	};
};

&pcie {
	status = "okay";

	brcmf1: bcrmf@1 {
		compatible = "brcm,bcm4329-fmac";
		status = "okay";
	};
};

&scp {
	status = "okay";

	scp0: scp@0 {
		brcm,pm-function = "regulator";
		brcm,pm-supply = <&vdd_reg>;
		brcm,pm-regulator-off-in-mem-state;
		brcm,pm-regulator-off-in-off-state;
	};

	scp1: scp@1 {
		brcm,pm-function = "regulator";
		brcm,pm-supply = <&wlan_reg0>;
		brcm,pm-regulator-off-in-off-state;
	};

	scp2: scp@2 {
		brcm,pm-function = "regulator";
		brcm,pm-supply = <&bt_reg0>;
		brcm,pm-regulator-off-in-mem-state;
		brcm,pm-regulator-off-in-off-state;
	};
};

&dte {
	status = "okay";
};
