config DRM_VC4
	tristate "Broadcom VC4's V3D or V3D only Graphics module"
	depends on ARCH_BCM_CYGNUS || ARCH_BCM2835 || COMPILE_TEST
	depends on DRM
	depends on COMMON_CLK
	select DRM_KMS_HELPER
	select DRM_KMS_CMA_HELPER
	select DRM_GEM_CMA_HELPER
	select DRM_PANEL
	help
	  Choose this option if you have a system that has a
          Broadcom VC4, such as the Raspberry Pi or other BCM2708/BCM2835
          or a SoC with V3D stand-alone GPU module, such as Cygnus family.

config DRM_VC4_DISPLAY
	tristate "Broadcom VC4 Display Graphics"
	depends on DRM_VC4
	depends on SND && SND_SOC
	select DRM_PANEL_BRIDGE
	select SND_PCM
	select SND_PCM_ELD
	select SND_SOC_GENERIC_DMAENGINE_PCM
	select DRM_MIPI_DSI
	help
	  Choose this option if you want to enable display support
          in a system that has a Broadcom VC4, such as the
          Raspberry Pi or other BCM2708/BCM2835.

	  This driver requires that "avoid_warnings=2" be present in
	  the config.txt for the firmware, to keep it from smashing
	  our display setup.
